{
  "$ref": "#/definitions/ConfigRoot",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConfigHeader": {
      "additionalProperties": false,
      "properties": {
        "backdrop": {
          "anyOf": [
            {
              "additionalProperties": false,
              "properties": {
                "type": {
                  "const": "image",
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "url"
              ],
              "type": "object"
            },
            {
              "additionalProperties": false,
              "properties": {
                "color": {
                  "type": "string"
                },
                "type": {
                  "const": "color",
                  "type": "string"
                }
              },
              "required": [
                "type",
                "color"
              ],
              "type": "object"
            }
          ]
        },
        "image": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "subheader": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "subheader",
        "image",
        "backdrop"
      ],
      "type": "object"
    },
    "ConfigProject": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "anyOf": [
            {
              "additionalProperties": false,
              "properties": {
                "text": {
                  "type": "string"
                },
                "type": {
                  "const": "text",
                  "type": "string"
                }
              },
              "required": [
                "type",
                "text"
              ],
              "type": "object"
            },
            {
              "additionalProperties": false,
              "properties": {
                "type": {
                  "const": "url",
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "url"
              ],
              "type": "object"
            }
          ]
        },
        "image": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "tags": {
          "items": {
            "$ref": "#/definitions/ConfigTag"
          },
          "type": "array"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "tags",
        "image",
        "description"
      ],
      "type": "object"
    },
    "ConfigRoot": {
      "additionalProperties": false,
      "properties": {
        "defaultTheme": {
          "type": "string"
        },
        "education": {
          "items": {
            "$ref": "#/definitions/ConfigTag"
          },
          "type": "array"
        },
        "experiences": {
          "items": {
            "$ref": "#/definitions/ConfigTag"
          },
          "type": "array"
        },
        "header": {
          "$ref": "#/definitions/ConfigHeader"
        },
        "projects": {
          "items": {
            "$ref": "#/definitions/ConfigProject"
          },
          "type": "array"
        },
        "skills": {
          "items": {
            "$ref": "#/definitions/ConfigTag"
          },
          "type": "array"
        },
        "themes": {
          "additionalProperties": {
            "$ref": "#/definitions/ThemeConfig"
          },
          "type": "object"
        }
      },
      "required": [
        "header",
        "skills",
        "education",
        "experiences",
        "projects",
        "themes",
        "defaultTheme"
      ],
      "type": "object"
    },
    "ConfigTag": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "additionalProperties": false,
          "properties": {
            "icon": {
              "type": "string"
            },
            "text": {
              "type": "string"
            }
          },
          "required": [
            "text",
            "icon"
          ],
          "type": "object"
        }
      ]
    },
    "ThemeConfig": {
      "additionalProperties": false,
      "properties": {
        "colors": {
          "additionalProperties": false,
          "properties": {
            "accent": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            },
            "background": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            },
            "primary": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            }
          },
          "required": [
            "background",
            "primary",
            "accent"
          ],
          "type": "object"
        },
        "conditions": {
          "additionalProperties": false,
          "properties": {
            "date": {
              "additionalProperties": false,
              "properties": {
                "day": {
                  "type": "number"
                },
                "hour": {
                  "type": "number"
                },
                "minute": {
                  "type": "number"
                },
                "month": {
                  "type": "number"
                }
              },
              "required": [
                "month"
              ],
              "type": "object"
            },
            "project": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "conditions",
        "colors"
      ],
      "type": "object"
    }
  }
}