{
  "$ref": "#/definitions/ConfigRoot",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConfigHeader": {
      "additionalProperties": false,
      "properties": {
        "backdrop": {
          "anyOf": [
            {
              "additionalProperties": false,
              "properties": {
                "type": {
                  "const": "image",
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "url"
              ],
              "type": "object"
            },
            {
              "additionalProperties": false,
              "properties": {
                "color": {
                  "type": "string"
                },
                "type": {
                  "const": "color",
                  "type": "string"
                }
              },
              "required": [
                "type",
                "color"
              ],
              "type": "object"
            }
          ]
        },
        "image": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "subheader": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "subheader",
        "image",
        "backdrop"
      ],
      "type": "object"
    },
    "ConfigProject": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "description": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "tags": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "image",
            "name",
            "tags"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "descriptionUrl": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "tags": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "descriptionUrl",
            "image",
            "name",
            "tags"
          ],
          "type": "object"
        }
      ]
    },
    "ConfigRoot": {
      "additionalProperties": false,
      "properties": {
        "defaultTheme": {
          "type": "string"
        },
        "education": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "experiences": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "header": {
          "$ref": "#/definitions/ConfigHeader"
        },
        "projects": {
          "items": {
            "$ref": "#/definitions/ConfigProject"
          },
          "type": "array"
        },
        "skills": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "themes": {
          "additionalProperties": {
            "$ref": "#/definitions/ThemeConfig"
          },
          "type": "object"
        }
      },
      "required": [
        "header",
        "skills",
        "education",
        "experiences",
        "projects",
        "themes",
        "defaultTheme"
      ],
      "type": "object"
    },
    "ThemeConfig": {
      "additionalProperties": false,
      "properties": {
        "backgroundImage": {
          "type": "string"
        },
        "colors": {
          "additionalProperties": false,
          "properties": {
            "accent": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            },
            "background": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            },
            "primary": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            }
          },
          "required": [
            "background",
            "primary",
            "accent"
          ],
          "type": "object"
        },
        "conditions": {
          "additionalProperties": false,
          "properties": {
            "date": {
              "additionalProperties": false,
              "properties": {
                "day": {
                  "type": "number"
                },
                "hour": {
                  "type": "number"
                },
                "minute": {
                  "type": "number"
                },
                "month": {
                  "type": "number"
                }
              },
              "required": [
                "month"
              ],
              "type": "object"
            },
            "project": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "overrides": {
          "additionalProperties": false,
          "properties": {
            "banner": {
              "$ref": "#/definitions/ThemeOverride"
            },
            "carousel": {
              "$ref": "#/definitions/ThemeOverride"
            },
            "footer": {
              "$ref": "#/definitions/ThemeOverride"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "conditions",
        "colors"
      ],
      "type": "object"
    },
    "ThemeOverride": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "color": {
              "type": "string"
            },
            "type": {
              "const": "color",
              "type": "string"
            }
          },
          "required": [
            "type",
            "color"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "colors": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "type": {
              "const": "gradient",
              "type": "string"
            }
          },
          "required": [
            "type",
            "colors"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "image",
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "url"
          ],
          "type": "object"
        }
      ]
    }
  }
}